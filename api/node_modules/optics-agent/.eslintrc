{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
  ],
  "rules": {
    "import/no-extraneous-dependencies": [
      "error", {"devDependencies": ["**/*.test.js"]}],
    "no-underscore-dangle": 0,
    "no-unused-expressions": ["error", {
      allowShortCircuit: true,
      allowTernary: false,
    }],
    "class-methods-use-this": 0,
    "no-unused-vars": ["error", {
      "vars": "local",
      "args": "after-used",
      "argsIgnorePattern": "^_"
    }]
  }
}
